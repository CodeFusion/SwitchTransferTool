<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="SttTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/switch_red</item>
        <item name="colorPrimaryVariant">@color/switch_neon_red</item>
        <item name="colorSecondary">@color/switch_blue</item>
        <item name="colorSecondaryVariant">@color/switch_neon_blue</item>
        <item name="colorPrimaryDark">@color/switch_red_dark</item>
        <item name="background">@color/switch_white</item>
        <item name="android:windowBackground">@color/switch_black</item>
        <item name="statusBarBackground">@color/switch_white</item>
        <item name="android:statusBarColor">@color/switch_white</item>
        <item name="android:colorBackground">@color/switch_white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/switch_blue</item>
        <item name="android:toolbarStyle">@style/toolbarStyle</item>
        <item name="toolbarStyle">@style/toolbarStyle</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textViewStyle">@style/SttTheme.TextViewStyle</item>
        <item name="buttonRippleColor">@color/switch_neon_blue</item>
        <item name="buttonOutlineColor">@color/switch_blue</item>
        <item name="aboutLibrariesStyle">@style/aboutLibrariesStyle</item>
    </style>

    <style name="settingsStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="actionBarTheme">@style/toolbarStyle</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="colorSecondary">@color/switch_blue</item>
        <item name="android:windowBackground">@color/switch_white</item>
        <item name="toolbarStyle">@style/toolbarStyle</item>
    </style>

    <style name="aboutLibrariesStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/switch_red</item>
        <item name="colorSecondary">@color/switch_blue</item>
        <item name="android:toolbarStyle">@style/toolbarStyle</item>
        <item name="toolbarStyle">@style/toolbarStyle</item>
        <item name="navigationIconTint">@color/black</item>
    </style>

    <style name="toolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="backgroundColor">@color/switch_red</item>
        <item name="android:background">@color/switch_red</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="SttTheme.TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SttTheme.MainHeader">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SttTheme.Icon">
        <item name="android:tint">@color/black</item>
        <item name="itemFillColor">@color/black</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="SttTheme.TransferButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="SttTheme.ConnectingLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SttTheme.BodyText" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SttTheme.TransparentImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SttTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SttTheme.OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">100dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">?attr/buttonRippleColor</item>
        <item name="strokeColor">@color/switch_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SttTheme.SolidButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_grey</item>
        <item name="android:textColor">@color/switch_blue</item>
        <item name="cornerRadius">2dp</item>
    </style>

    <style name="SttTheme.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
    </style>
</resources>